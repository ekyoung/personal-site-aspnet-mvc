                        <li><a href="@Url.Action("Gallery", "Trips", new { trip = "DinosaurNM2005" })">Dinosaur National Monument</a></li>
                    </ul>
                </li>
                <li @if (@Model.IsTshirtsActive)
                    {
                        @: class="active"
                    }
                ><a href="@Url.Action("Index", "Tshirts")">T-Shirts</a></li>
                <li @if (@Model.IsAboutThisSiteActive)
                    {
                        @: class="active"
                    }
                ><a href="@Url.Action("Index", "AboutThisSite")">About This Site</a></li>
                <li @if (@Model.IsResumeActive)
                    {
                        @: class="active"
                    }
                ><a href="@Url.Action("Index", "Resume")">Resume</a></li>
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</div>
